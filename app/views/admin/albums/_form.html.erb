<%= form_for([:admin, @album]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name,class: "form-control" %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <div>
    <p>All Artists</p>
    <%= f.select(:artist_ids, @artists.collect{|item| [item.name, item.id]}, {}, {:multiple => true, :size => 3}) %>
  </div>
  <%= f.submit "submit", class: "btn btn-primary" %>
<% end %>
