<% provide(:title, 'All categories') %>
<h1>All categories</h1>

<ul class="categories">
  <% @categories.each do |category|%>
    <li>
      <%= category.name %>
      <%= link_to "edit", edit_admin_category_path(category) %>
      <%= link_to "delete", [:admin, category], method: :delete,
      data: { confirm: "You sure?" } %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
